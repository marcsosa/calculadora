<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="-102dp">

        <TextView
            android:id="@+id/tvsignos"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etpantalla"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:ems="10"
            android:gravity="bottom"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultview"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true">

            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:minHeight="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7" />

                <Button
                    android:id="@+id/bt8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8" />

                <Button
                    android:id="@+id/bt9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:text="9" />

            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row1"
                android:minHeight="50dp">

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4" />

                <Button
                    android:id="@+id/bt5"
                    android:layout_height="wrap_content"
                    android:text="5" />

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2" />

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btcero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="48dp"
                    android:text="0" />

                <Button
                    android:id="@+id/btpunto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="." />

                <Button
                    android:id="@+id/btporciento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="%" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:minHeight="50dp">

                <Button
                    android:id="@+id/btdivision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="/" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:minHeight="50dp">

                <Button
                    android:id="@+id/btmulti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="x" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:minHeight="50dp">

                <Button
                    android:id="@+id/btmenos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp">

                <Button
                    android:id="@+id/btsuma"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <TableRow
        android:layout_width="354dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btdel"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="DEL" />

        <Button
            android:id="@+id/btigualdad"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="=" />

    </TableRow>


</LinearLayout>
